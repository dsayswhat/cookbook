---
layout: layouts/base.njk
---
<p>start of recipe.njk</p>
<article class="recipe">
  <header>
    <h1>{{ title }}</h1>
    <div class="recipe-meta">
      {% if metadata.categories %}
        <div><strong>Categories:</strong> {{ metadata.categories | join(", ") }}</div>
      {% endif %}
      {% if metadata.cuisine %}
        <div><strong>Cuisine:</strong> {{ metadata.cuisine }}</div>
      {% endif %}
      {% if metadata.tags %}
        <div><strong>Tags:</strong> {{ metadata.tags | join(", ") }}</div>
      {% endif %}
      {% if metadata.difficulty %}
        <div><strong>Difficulty:</strong> {{ metadata.difficulty }}</div>
      {% endif %}
      {% if timing and timing.total %}
        <div><strong>Total Time:</strong> {{ timing.total }} minutes</div>
      {% endif %}
      {% if yield %}
        <div><strong>Yield:</strong> {{ yield.amount }} {{ yield.unit }}</div>
      {% endif %}
      {% if source_url %}
        <div><strong>Source:</strong> <a href="{{ source_url }}">{{ source_url }}</a></div>
      {% endif %}
    </div>
  </header>

  <div class="markdown-content">
    {{ content | safe }}
  </div>
</article> 